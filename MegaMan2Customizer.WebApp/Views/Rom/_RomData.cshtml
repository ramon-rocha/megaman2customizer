@using MegaMan2Customizer.Core
@using MegaMan2Customizer.WebApp.Models

@model RomFormModel

@{
    MegaManRom rom = this.Model.Rom;
}

<div class="card">
    <div class="card-header">
        <h2><a data-toggle="collapse" href="#collapseMegaMan">Mega Man Options</a></h2>
    </div>
    <div class="card-body collapse" id="collapseMegaMan">
        <div class="row">
            <div class="col-md-3 form-group">
                <label for="startingHealth">Starting Health</label>
                <input class="form-control" type="number" min="0" max="255" name="startingHealth" id="startingHealth" value="@rom.MegaManOptions.StartingHealth" placeholder="Default: 28" />
            </div>
            <div class="col-md-3 form-group">
                <label for="maxHealth">Max Health</label>
                <input class="form-control" type="number" min="0" max="255" name="maxHealth" id="maxHealth" value="@rom.MegaManOptions.MaxHealth" placeholder="Default: 28" />
            </div>
            <div class="col-md-3 form-group">
                <label for="speed">Running Speed</label>
                <input class="form-control" type="number" min="0" max="255" name="speed" id="speed" value="@rom.MegaManOptions.Speed" placeholder="Default: 1" />
            </div>
            <div class="col-md-3 form-group">
                <label for="jumpHeight">Jump Height</label>
                <input class="form-control" type="number" min="0" max="255" name="jumpHeight" id="jumpHeight" value="@rom.MegaManOptions.JumpHeight" placeholder="Default: 4" />
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3><a data-toggle="collapse" href="#collapseWeapons">Weapon Options</a></h3>
            </div>
            <div id="collapseWeapons" class="collapse card-body">

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseMegaBuster">Mega Buster</a></h4>
                    </div>
                    <div id="collapseMegaBuster" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "busterPrimaryColor", rom.MegaManOptions.BusterPrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "busterSecondaryColor", rom.MegaManOptions.BusterSecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="busterSpeed">Projectile Speed</label>
                                <input class="form-control" type="number" min="0" max="255" name="busterSpeed" id="busterSpeed" value="@rom.MegaManOptions.BusterSpeed" placeholder="Default: 4" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="busterShots">Max Projectiles on Screen</label>
                                <input class="form-control" type="number" min="0" max="255" name="busterShots" id="busterShots" value="@rom.MegaManOptions.MaxBusterShots" placeholder="Default: 3" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseAtomicFire">Atomic Fire</a></h4>
                    </div>
                    <div id="collapseAtomicFire" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "atomicFirePrimaryColor", rom.WeaponOptions.AtomicFire.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "atomicFireSecondaryColor", rom.WeaponOptions.AtomicFire.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="atomicFireLevel1Ammo">Level 1 Ammo Used</label>
                                <input class="form-control" type="number" min="0" max="255" name="atomicFireLevel1Ammo" id="atomicFireLevel1Ammo" value="@rom.WeaponOptions.AtomicFire.Level1AmmoUsed" placeholder="Default: 1" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="atomicFireLevel2ChargeTime">Level 2 Charge Time</label>
                                <input class="form-control" type="number" min="0" max="255" name="atomicFireLevel2ChargeTime" id="atomicFireLevel2ChargeTime" value="@rom.WeaponOptions.AtomicFire.Level2ChargeTime" placeholder="Default: 125" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="atomicFireLevel2Ammo">Level 2 Ammo Used</label>
                                <input class="form-control" type="number" min="0" max="255" name="atomicFireLevel2Ammo" id="atomicFireLevel2Ammo" value="@rom.WeaponOptions.AtomicFire.Level2AmmoUsed" placeholder="Default: 6" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="atomicFireLevel3ChargeTime">Level 3 Charge Time</label>
                                <input class="form-control" type="number" min="0" max="255" name="atomicFireLevel3ChargeTime" id="atomicFireLevel3ChargeTime" value="@rom.WeaponOptions.AtomicFire.Level3ChargeTime" placeholder="Default: 125" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="atomicFireLevel3Ammo">Level 3 Ammo Used</label>
                                <input class="form-control" type="number" min="0" max="255" name="atomicFireLevel3Ammo" id="atomicFireLevel3Ammo" value="@rom.WeaponOptions.AtomicFire.Level3AmmoUsed" placeholder="Default: 10" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="atomicFireSpeed">Projectile Speed</label>
                                <input class="form-control" type="number" min="0" max="255" name="atomicFireSpeed" id="atomicFireSpeed" value="@rom.WeaponOptions.AtomicFire.ProjectileSpeed" placeholder="Default: 4" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseAirShooter">Air Shooter</a></h4>
                    </div>
                    <div id="collapseAirShooter" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "airShooterPrimaryColor", rom.WeaponOptions.AirShooter.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "airShooterSecondaryColor", rom.WeaponOptions.AirShooter.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="airShooterAmmo">Ammo Used</label>
                                <input class="form-control" type="number" min="0" max="255" name="airShooterAmmo" id="airShooterAmmo" value="@rom.WeaponOptions.AirShooter.AmmoUsed" placeholder="Default: 2" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="airShooterShots">Number of Projectiles</label>
                                <input class="form-control" type="number" min="0" max="255" name="airShooterShots" id="airShooterShots" value="@rom.WeaponOptions.AirShooter.ProjectileCount" placeholder="Default: 4" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseLeafShield">Leaf Shield</a></h4>
                    </div>
                    <div id="collapseLeafShield" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "leafShieldPrimaryColor", rom.WeaponOptions.LeafShield.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "leafShieldSecondaryColor", rom.WeaponOptions.LeafShield.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="leafShieldAmmo">Ammo Used</label>
                                <input class="form-control" type="number" min="0" max="255" name="leafShieldAmmo" id="leafShieldAmmo" value="3" placeholder="Default: 3" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="leafShieldSpeed">Projectile Speed</label>
                                <input class="form-control" type="number" min="0" max="255" name="leafShieldSpeed" id="leafShieldSpeed" value="4" placeholder="Default: 4" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseBubbleLead">Bubble Lead</a></h4>
                    </div>
                    <div id="collapseBubbleLead" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "bubbleLeadPrimaryColor", rom.WeaponOptions.BubbleLead.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "bubbleLeadSecondaryColor", rom.WeaponOptions.BubbleLead.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadAmmo">Shots per Ammo Tick</label>
                                <input class="form-control" type="number" min="0" max="255" name="bubbleLeadAmmo" id="bubbleLeadAmmo" value="2" placeholder="Default: 2" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadShots">Max Projectiles on Screen</label>
                                <input class="form-control" type="number" min="0" max="255" name="bubbleLeadShots" id="bubbleLeadShots" value="3" placeholder="Default: 3" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadHorizontalSpeed">Projectile Horizontal Speed</label>
                                <input class="form-control" type="number" min="0" max="255" name="bubbleLeadHorizontalSpeed" id="bubbleLeadHorizontalSpeed" value="1" placeholder="Default: 1" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadVerticalSpeed">Projectile Vertical Speed</label>
                                <input class="form-control" type="number" min="0" max="255" name="bubbleLeadVerticalSpeed" id="bubbleLeadVerticalSpeed" value="2" placeholder="Default: 2" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadSurfaceSpeed">Projectile Surface Speed</label>
                                <input class="form-control" type="number" min="0" max="255" name="bubbleLeadSurfaceSpeed" id="bubbleLeadSurfaceSpeed" value="2" placeholder="Default: 2" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadFallingSpeed">Projectile Falling Speed</label>
                                <input class="form-control" type="number" min="0" max="255" name="bubbleLeadFallingSpeed" id="bubbleLeadFallingSpeed" value="254" placeholder="Default: 254" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseQuickBoomerang">Quick Boomerang</a></h4>
                    </div>
                    <div id="collapseQuickBoomerang" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "quickBoomerangPrimaryColor", rom.WeaponOptions.QuickBoomerang.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "quickBoomerangSecondaryColor", rom.WeaponOptions.QuickBoomerang.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangAmmo">Shots per Ammo Tick</label>
                                <input class="form-control" type="number" min="0" max="255" name="quickBoomerangAmmo" id="quickBoomerangAmmo" value="8" placeholder="Default: 8" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangShots">Max Projectiles on Screen</label>
                                <input class="form-control" type="number" min="0" max="255" name="quickBoomerangShots" id="quickBoomerangShots" value="5" placeholder="Default: 5" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangDelay">Auto-fire Delay</label>
                                <input class="form-control" type="number" min="0" max="255" name="quickBoomerangDelay" id="quickBoomerangDelay" value="11" placeholder="Default: 11" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangDistance">Travel Distance</label>
                                <input class="form-control" type="number" min="0" max="255" name="quickBoomerangDistance" id="quickBoomerangDistance" value="82" placeholder="Default: 82" />
                            </div>

                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangLaunchAngle">Launch Angle</label>
                                <input class="form-control" type="number" min="0" max="255" name="quickBoomerangLaunchAngle" id="quickBoomerangLaunchAngle" value="75" placeholder="Default: 75" />
                            </div>

                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangReturnAngle">Return Angle</label>
                                <input class="form-control" type="number" min="0" max="255" name="quickBoomerangReturnAngle" id="quickBoomerangReturnAngle" value="75" placeholder="Default: 75" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseTimeStopper">Time Stopper</a></h4>
                    </div>
                    <div id="collapseTimeStopper" class="card-body collapse">
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="timeStopperPrimaryColor">Primary Color</label>
                                <select class="form-control" name="timeStopperPrimaryColor" id="timeStopperPrimaryColor">
                                    <option>Bright Pink</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="timeStopperSecondaryColor">Secondary Color</label>
                                <select class="form-control" name="timeStopperSecondaryColor" id="timeStopperSecondaryColor">
                                    <option>Pink</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="timeStopperDrainRateDelay">Drain Rate Delay</label>
                                <input class="form-control" type="number" min="0" max="255" name="timeStopperDrainRateDelay" id="timeStopperDrainRateDelay" value="15" placeholder="Default: 15" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="timeStopperDelayBeforeDrain">Delay Before Drain</label>
                                <input class="form-control" type="number" min="0" max="255" name="timeStopperDelayBeforeDrain" id="timeStopperDelayBeforeDrain" value="15" placeholder="Default: 15" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseMetalBlade">Metal Blade</a></h4>
                    </div>
                    <div id="collapseMetalBlade" class="collapse card-body">
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="metalBladePrimaryColor">Primary Color</label>
                                <select class="form-control" name="metalBladePrimaryColor" id="metalBladePrimaryColor">
                                    <option>Yellow</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="metalBladeSecondaryColor">Secondary Color</label>
                                <select class="form-control" name="metalBladeSecondaryColor" id="metalBladeSecondaryColor">
                                    <option>Dark Yellow</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="metalBladeAmmo">Shots per Ammo Tick</label>
                                <input class="form-control" type="number" min="0" max="255" name="metalBladeAmmo" id="metalBladeAmmo" value="4" placeholder="Default: 4" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="metalBladeShots">Max Projectiles on Screen</label>
                                <input class="form-control" type="number" min="0" max="255" name="metalBladeShots" id="metalBladeShots" value="4" placeholder="Default: 4" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="metalBladeSpeed">Projectile Speed</label>
                                <input class="form-control" type="number" min="0" max="255" name="metalBladeSpeed" id="metalBladeSpeed" value="4" placeholder="Default: 4" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseCrashBomber">Crash Bomber</a></h4>
                    </div>
                    <div id="collapseCrashBomber" class="collapse card-body">
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="crashBomberPrimaryColor">Primary Color</label>
                                <select class="form-control" name="crashBomberPrimaryColor" id="crashBomberPrimaryColor">
                                    <option>Bright White</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="crashBomberSecondaryColor">Secondary Color</label>
                                <select class="form-control" name="crashBomberSecondaryColor" id="crashBomberSecondaryColor">
                                    <option>Red</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="crashBomberAmmo">Ammo Used</label>
                                <input class="form-control" type="number" min="0" max="255" name="crashBomberAmmo" id="crashBomberAmmo" value="4" placeholder="Default: 4" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="crashBomberSpeed">Projectile Speed</label>
