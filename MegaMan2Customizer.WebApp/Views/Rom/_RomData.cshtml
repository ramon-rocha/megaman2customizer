@using MegaMan2Customizer.Core
@using MegaMan2Customizer.WebApp.Models

@model RomFormModel

@{
    MegaManRom rom = this.Model.Rom;
}

<div class="card">
    <div class="card-header">
        <h2><a data-toggle="collapse" href="#collapseMegaMan">Mega Man Options</a></h2>
    </div>
    <div class="card-body collapse" id="collapseMegaMan">
        <div class="row">
            <div class="col-md-3 form-group">
                <label for="startingHealth">Starting Health</label>
                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="startingHealth" id="startingHealth" value="@rom.MegaMan.StartingHealth" placeholder="Default: 28" />
            </div>
            <div class="col-md-3 form-group">
                <label for="maxHealth">Max Health</label>
                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="maxHealth" id="maxHealth" value="@rom.MegaMan.MaxHealth" placeholder="Default: 28" />
            </div>
            <div class="col-md-3 form-group">
                <label for="speed">Running Speed</label>
                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="speed" id="speed" value="@rom.MegaMan.Speed" placeholder="Default: 1" />
            </div>
            <div class="col-md-3 form-group">
                <label for="jumpHeight">Jump Height</label>
                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="jumpHeight" id="jumpHeight" value="@rom.MegaMan.JumpHeight" placeholder="Default: 4" />
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3><a data-toggle="collapse" href="#collapseWeapons">Weapon Options</a></h3>
            </div>
            <div id="collapseWeapons" class="collapse card-body">

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseMegaBuster">Mega Buster</a></h4>
                    </div>
                    <div id="collapseMegaBuster" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "busterPrimaryColor", rom.MegaMan.BusterPrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "busterSecondaryColor", rom.MegaMan.BusterSecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="busterSpeed">Projectile Speed</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="busterSpeed" id="busterSpeed" value="@rom.MegaMan.BusterSpeed" placeholder="Default: 4" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="busterShots">Max Projectiles on Screen</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="busterShots" id="busterShots" value="@rom.MegaMan.MaxBusterShots" placeholder="Default: 3" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseAtomicFire">Atomic Fire</a></h4>
                    </div>
