</div>

<div class="card">
    <div class="card-header">
        <h2><a data-toggle="collapse" href="#collapseRobotMasters">Robot Master Options</a></h2>
    </div>
    <div class="collapse card-body" id="collapseRobotMasters">
        <div class="card">
            <div class="card-header">
                <h3><a data-toggle="collapse" href="#collapseFlashMan">Flash Man</a></h3>
            </div>
            <div class="card-body collapse" id="collapseFlashMan">
                <div class="row">
                    <partial name="_ColorFormGroup" model="@("Primary Color", "flashManPrimaryColor", rom.RobotMasterOptions.FlashMan.PrimaryColor.Name)" />
                    <partial name="_ColorFormGroup" model="@("Secondary Color", "flashManSecondaryColor", rom.RobotMasterOptions.FlashMan.SecondaryColor.Name)" />
                    <div class="col-md-3 form-group">
                        <label for="flashManSpeed">Running Speed</label>
                        <input class="form-control" type="number" min="0" max="255.999" name="flashManSpeed" id="flashManSpeed" value="@rom.RobotMasterOptions.FlashMan.RunSpeed" placeholder="Default: 1.0234375" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="flashManTimeStopperDelay">Time Stopper Delay</label>
                        <input class="form-control" type="number" min="0" max="255" name="flashManTimeStopperDelay" id="flashManTimeStopperDelay" value="@rom.RobotMasterOptions.FlashMan.TimeStopperDelay" placeholder="Default: 187" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 form-group">
                        <label for="flashManJumpDistance">Jump Distance</label>
                        <input class="form-control" type="number" min="0" max="255" name="flashManJumpDistance" id="flashManJumpDistance" value="@rom.RobotMasterOptions.FlashMan.JumpDistance" placeholder="Default: 0" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="flashManJumpHeight">Jump Height</label>
                        <input class="form-control" type="number" min="0" max="255" name="flashManJumpHeight" id="flashManJumpHeight" value="@rom.RobotMasterOptions.FlashMan.JumpHeight" placeholder="Default: 4" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="flashManProjectileCount">Number of Projectiles</label>
                        <input class="form-control" type="number" min="0" max="255" name="flashManProjectileCount" id="flashManProjectileCount" value="@rom.RobotMasterOptions.FlashMan.ProjectileCount" placeholder="Default: 6" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="flashManProjectileSpeed">Projectile Speed</label>
                        <input class="form-control" type="number" min="0" max="255" name="flashManProjectileSpeed" id="flashManProjectileSpeed" value="@rom.RobotMasterOptions.FlashMan.ProjectileSpeed" placeholder="Default: 8" />
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3><a data-toggle="collapse" href="#collapseAirMan">Air Man</a></h3>
            </div>

            <div class="card-body collapse" id="collapseAirMan">
                <div class="row">
                    <partial name="_ColorFormGroup" model="@("Primary Color", "airManPrimaryColor", rom.RobotMasterOptions.AirMan.PrimaryColor.Name)" />
                    <partial name="_ColorFormGroup" model="@("Secondary Color", "airManSecondaryColor", rom.RobotMasterOptions.AirMan.SecondaryColor.Name)" />
                    <div class="col-md-3 form-group">
                        <label for="airManShotsBeforeJumping">Shots Before Jumping</label>
                        <input class="form-control" type="number" min="0" max="255" name="airManShotsBeforeJumping" id="airManShotsBeforeJumping" value="@rom.RobotMasterOptions.AirMan.ShotsBeforeJumping" placeholder="Default: 3" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="airManJump1Distance">First Jump Distance</label>
                        <input class="form-control" type="number" min="0" max="255" name="airManJump1Distance" id="airManJump1Distance" value="@rom.RobotMasterOptions.AirMan.Jump1Distance" placeholder="Default: 1" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 form-group">
                        <label for="airManJump1Height">First Jump Height</label>
                        <input class="form-control" type="number" min="0" max="255" name="airManJump1Height" id="airManJump1Height" value="@rom.RobotMasterOptions.AirMan.Jump1Height" placeholder="Default: 4" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="airManJump2Distance">Second Jump Distance</label>
                        <input class="form-control" type="number" min="0" max="255" name="airManJump2Distance" id="airManJump2Distance" value="@rom.RobotMasterOptions.AirMan.Jump2Distance" placeholder="Default: 1" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="airManJump2Height">Second Jump Height</label>
                        <input class="form-control" type="number" min="0" max="255" name="airManJump2Height" id="airManJump2Height" value="@rom.RobotMasterOptions.AirMan.Jump2Height" placeholder="Default: 7" />
                    </div>
                    <partial name="_ColorFormGroup" model="@("Primary Color", "airManTornadoPrimaryColor", rom.RobotMasterOptions.AirMan.TornadoPrimaryColor.Name)" />
                </div>
                <div class="row">
                    <partial name="_ColorFormGroup" model="@("Primary Color", "airManTornadoSecondaryColor", rom.RobotMasterOptions.AirMan.TornadoSecondaryColor.Name)" />
                </div>

                @for (int i = 0; i < rom.RobotMasterOptions.AirMan.Patterns.Count; i++)
                {
                    TornadoPattern pattern = rom.RobotMasterOptions.AirMan.Patterns[i];
                    <div class="card">
                        <div class="card-header">
                            @{ string patternCollapseId = $"collapsePattern{i + 1}"; }
                            <h4><a data-toggle="collapse" href="#@patternCollapseId">Tornado Pattern @(i + 1)</a></h4>
                        </div>
                        <div class="card-body collapse" id="@patternCollapseId">
                            <div class="row">
                                @for (int j = 0; j < pattern.Tornados.Count; j += 2)
                                {
                                    <div class="col-md-2 form-group">
                                        <label for="airManTornadoVertSpeed">Tornado @(j + 1) Vert. Speed</label>
                                        <input class="form-control" type="number" min="0" max="255" name="airManTornadoVertSpeed" id="airManTornadoVertSpeed" value="@pattern.Tornados[j].VerticalVelocity" />
                                    </div>
                                    <div class="col-md-2 form-group">
                                        <label for="airManTornadoHorzSpeed">Tornado @(j + 1) Horz. Speed</label>
                                        <input class="form-control" type="number" min="0" max="255" name="airManTornadoHorzSpeed" id="airManTornadoHorzSpeed" value="@pattern.Tornados[j].HorizontalVelocity" />
                                    </div>
                                    <div class="col-md-2 form-group">
                                        <label for="airManTornadoFlightTime">Tornado @(j + 1) Flight Time</label>
                                        <input class="form-control" type="number" min="0" max="255" name="airManTornadoFlightTime" id="airManTornadoFlightTime" value="@pattern.Tornados[j].FlightTime" />
                                    </div>

                                    <div class="col-md-2 form-group">
                                        <label for="airManTornadoVertSpeed">Tornado @(j + 2) Vert. Speed</label>
