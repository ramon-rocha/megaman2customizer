                                <label for="atomicFireSpeed">Projectile Speed</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="atomicFireSpeed" id="atomicFireSpeed" value="@rom.Weapons.AtomicFire.ProjectileSpeed" placeholder="Default: 4" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseAirShooter">Air Shooter</a></h4>
                    </div>
                    <div id="collapseAirShooter" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "airShooterPrimaryColor", rom.Weapons.AirShooter.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "airShooterSecondaryColor", rom.Weapons.AirShooter.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="airShooterAmmo">Ammo Used</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="airShooterAmmo" id="airShooterAmmo" value="@rom.Weapons.AirShooter.AmmoUsed" placeholder="Default: 2" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="airShooterShots">Number of Projectiles</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="airShooterShots" id="airShooterShots" value="@rom.Weapons.AirShooter.ProjectileCount" placeholder="Default: 4" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseLeafShield">Leaf Shield</a></h4>
                    </div>
                    <div id="collapseLeafShield" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "leafShieldPrimaryColor", rom.Weapons.LeafShield.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "leafShieldSecondaryColor", rom.Weapons.LeafShield.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="leafShieldAmmo">Ammo Used</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="leafShieldAmmo" id="leafShieldAmmo" value="3" placeholder="Default: 3" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="leafShieldSpeed">Projectile Speed</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="leafShieldSpeed" id="leafShieldSpeed" value="4" placeholder="Default: 4" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseBubbleLead">Bubble Lead</a></h4>
                    </div>
                    <div id="collapseBubbleLead" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "bubbleLeadPrimaryColor", rom.Weapons.BubbleLead.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "bubbleLeadSecondaryColor", rom.Weapons.BubbleLead.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadAmmo">Shots per Ammo Tick</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="bubbleLeadAmmo" id="bubbleLeadAmmo" value="2" placeholder="Default: 2" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadShots">Max Projectiles on Screen</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="bubbleLeadShots" id="bubbleLeadShots" value="3" placeholder="Default: 3" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadHorizontalSpeed">Projectile Horizontal Speed</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="bubbleLeadHorizontalSpeed" id="bubbleLeadHorizontalSpeed" value="1" placeholder="Default: 1" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadVerticalSpeed">Projectile Vertical Speed</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="bubbleLeadVerticalSpeed" id="bubbleLeadVerticalSpeed" value="2" placeholder="Default: 2" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadSurfaceSpeed">Projectile Surface Speed</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="bubbleLeadSurfaceSpeed" id="bubbleLeadSurfaceSpeed" value="2" placeholder="Default: 2" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="bubbleLeadFallingSpeed">Projectile Falling Speed</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="bubbleLeadFallingSpeed" id="bubbleLeadFallingSpeed" value="254" placeholder="Default: 254" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseQuickBoomerang">Quick Boomerang</a></h4>
                    </div>
                    <div id="collapseQuickBoomerang" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "quickBoomerangPrimaryColor", rom.Weapons.QuickBoomerang.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "quickBoomerangSecondaryColor", rom.Weapons.QuickBoomerang.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangAmmo">Shots per Ammo Tick</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="quickBoomerangAmmo" id="quickBoomerangAmmo" value="8" placeholder="Default: 8" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangShots">Max Projectiles on Screen</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="quickBoomerangShots" id="quickBoomerangShots" value="5" placeholder="Default: 5" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangDelay">Auto-fire Delay</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="quickBoomerangDelay" id="quickBoomerangDelay" value="11" placeholder="Default: 11" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangDistance">Travel Distance</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="quickBoomerangDistance" id="quickBoomerangDistance" value="82" placeholder="Default: 82" />
                            </div>

                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangLaunchAngle">Launch Angle</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="quickBoomerangLaunchAngle" id="quickBoomerangLaunchAngle" value="75" placeholder="Default: 75" />
                            </div>

                            <div class="col-md-3 form-group">
                                <label for="quickBoomerangReturnAngle">Return Angle</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="quickBoomerangReturnAngle" id="quickBoomerangReturnAngle" value="75" placeholder="Default: 75" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseTimeStopper">Time Stopper</a></h4>
                    </div>
                    <div id="collapseTimeStopper" class="card-body collapse">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "timeStopperPrimaryColor", rom.Weapons.TimeStopper.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "timeStopperSecondaryColor", rom.Weapons.TimeStopper.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="timeStopperDrainRateDelay">Drain Rate Delay</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="timeStopperDrainRateDelay" id="timeStopperDrainRateDelay" value="15" placeholder="Default: 15" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="timeStopperDelayBeforeDrain">Delay Before Drain</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="timeStopperDelayBeforeDrain" id="timeStopperDelayBeforeDrain" value="15" placeholder="Default: 15" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseMetalBlade">Metal Blade</a></h4>
                    </div>
                    <div id="collapseMetalBlade" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "metalBladePrimaryColor", rom.Weapons.MetalBlade.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "metalBladeSecondaryColor", rom.Weapons.MetalBlade.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="metalBladeAmmo">Shots per Ammo Tick</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="metalBladeAmmo" id="metalBladeAmmo" value="4" placeholder="Default: 4" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="metalBladeShots">Max Projectiles on Screen</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="metalBladeShots" id="metalBladeShots" value="4" placeholder="Default: 4" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="metalBladeSpeed">Projectile Speed</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="metalBladeSpeed" id="metalBladeSpeed" value="4" placeholder="Default: 4" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4><a data-toggle="collapse" href="#collapseCrashBomber">Crash Bomber</a></h4>
                    </div>
                    <div id="collapseCrashBomber" class="collapse card-body">
                        <div class="row">
                            <partial name="_ColorFormGroup" model="@("Primary Color", "crashBomberPrimaryColor", rom.Weapons.CrashBomber.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "crashBomberSecondaryColor", rom.Weapons.CrashBomber.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="crashBomberAmmo">Ammo Used</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="crashBomberAmmo" id="crashBomberAmmo" value="4" placeholder="Default: 4" />
                            </div>
