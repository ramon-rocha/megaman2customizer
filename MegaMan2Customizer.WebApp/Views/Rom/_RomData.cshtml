                            <partial name="_ColorFormGroup" model="@("Primary Color", "atomicFirePrimaryColor", rom.Weapons.AtomicFire.PrimaryColor.Name)" />
                            <partial name="_ColorFormGroup" model="@("Secondary Color", "atomicFireSecondaryColor", rom.Weapons.AtomicFire.SecondaryColor.Name)" />
                            <div class="col-md-3 form-group">
                                <label for="atomicFireLevel1Ammo">Level 1 Ammo Used</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="atomicFireLevel1Ammo" id="atomicFireLevel1Ammo" value="@rom.Weapons.AtomicFire.Level1AmmoUsed" placeholder="Default: 1" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="atomicFireLevel2ChargeTime">Level 2 Charge Time</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="atomicFireLevel2ChargeTime" id="atomicFireLevel2ChargeTime" value="@rom.Weapons.AtomicFire.Level2ChargeTime" placeholder="Default: 125" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="atomicFireLevel2Ammo">Level 2 Ammo Used</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="atomicFireLevel2Ammo" id="atomicFireLevel2Ammo" value="@rom.Weapons.AtomicFire.Level2AmmoUsed" placeholder="Default: 6" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="atomicFireLevel3ChargeTime">Level 3 Charge Time</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="atomicFireLevel3ChargeTime" id="atomicFireLevel3ChargeTime" value="@rom.Weapons.AtomicFire.Level3ChargeTime" placeholder="Default: 125" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="atomicFireLevel3Ammo">Level 3 Ammo Used</label>
                                <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="atomicFireLevel3Ammo" id="atomicFireLevel3Ammo" value="@rom.Weapons.AtomicFire.Level3AmmoUsed" placeholder="Default: 10" />
                            </div>
