</div>

<div class="card">
    <div class="card-header">
        <h2><a data-toggle="collapse" href="#collapseRobotMasters">Robot Master Options</a></h2>
    </div>
    <div class="collapse card-body" id="collapseRobotMasters">

        <div class="card">
            <div class="card-header">
                <h3><a data-toggle="collapse" href="#collapseBubbleMan">Bubble Man</a></h3>
            </div>
            <div class="card-body collapse" id="collapseBubbleMan">
                <div class="row">
                    <partial name="_ColorFormGroup" model="@("Primary Color", "bubbleManPrimaryColor", rom.RobotMasters.BubbleMan.PrimaryColor.Name)" />
                    <partial name="_ColorFormGroup" model="@("Secondary Color", "bubbleManSecondaryColor", rom.RobotMasters.BubbleMan.SecondaryColor.Name)" />
                    <div class="col-md-3 form-group">
                        <label for="bubbleManRiseSpeed">Rise Speed</label>
                        <input class="form-control" type="number" step="any" min="0" max="255" name="bubbleManRiseSpeed" id="bubbleManRiseSpeed" value="@rom.RobotMasters.BubbleMan.RiseSpeed" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="bubbleManMaxHeight">Max Height</label>
                        <input class="form-control" type="number" step="any" min="0" max="255" name="bubbleManMaxHeight" id="bubbleManMaxHeight" value="@rom.RobotMasters.BubbleMan.MaxHeight" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 form-group">
                        <label for="bubbleManFallSpeed">Fall Speed</label>
                        <input class="form-control" type="number" step="any" min="0" max="255" name="bubbleManFallSpeed" id="bubbleManFallSpeed" value="@rom.RobotMasters.BubbleMan.FallSpeed" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="bubbleManShotDelay">Shot Delay</label>
                        <input class="form-control" type="number" step="any" min="0" max="255" name="bubbleManShotDelay" id="bubbleManShotDelay" value="@rom.RobotMasters.BubbleMan.ShotDelay" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="bubbleManProjectileSpeed">Projectile Speed</label>
                        <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="bubbleManProjectileSpeed" id="bubbleManProjectileSpeed" value="@rom.RobotMasters.BubbleMan.ProjectileSpeed" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="bubbleManProjectileVertSpeed">Projectile Vertical Launch Speed</label>
                        <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="bubbleManProjectileVertSpeed" id="bubbleManProjectileVertSpeed" value="@rom.RobotMasters.BubbleMan.ProjectileVerticalLaunchSpeed" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 form-group">
                        <label for="bubbleManBounceSpeed">Projectile Bounce Speed</label>
                        <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="bubbleManBounceSpeed" id="bubbleManBounceSpeed" value="@rom.RobotMasters.BubbleMan.ProjectileBounceSpeed" />
                    </div>
                    <partial name="_WeaponFormGroup" model="@("bubbleManWeaponOnDefeat", rom.RobotMasters.BubbleMan.WeaponOnDefeat)" />
                    <div class="col-md-3 form-group">
                        <label for="bubbleManItemOnDefeat">Item On Defeat</label>
                        <input class="form-control" type="text" name="bubbleManItemOnDefeat" id="bubbleManItemOnDefeat" value="@rom.RobotMasters.BubbleMan.ItemOnDefeat.ToString()" />
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3><a data-toggle="collapse" href="#collapseAirMan">Air Man</a></h3>
            </div>

            <div class="card-body collapse" id="collapseAirMan">
                <div class="row">
                    <partial name="_ColorFormGroup" model="@("Primary Color", "airManPrimaryColor", rom.RobotMasters.AirMan.PrimaryColor.Name)" />
                    <partial name="_ColorFormGroup" model="@("Secondary Color", "airManSecondaryColor", rom.RobotMasters.AirMan.SecondaryColor.Name)" />
                    <div class="col-md-3 form-group">
                        <label for="airManShotsBeforeJumping">Shots Before Jumping</label>
                        <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="airManShotsBeforeJumping" id="airManShotsBeforeJumping" value="@rom.RobotMasters.AirMan.ShotsBeforeJumping" placeholder="Default: 3" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 form-group">
                        <label for="airManJump1Distance">First Jump Distance</label>
                        <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="airManJump1Distance" id="airManJump1Distance" value="@rom.RobotMasters.AirMan.Jump1Distance" placeholder="Default: 1" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="airManJump1Height">First Jump Height</label>
                        <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="airManJump1Height" id="airManJump1Height" value="@rom.RobotMasters.AirMan.Jump1Height" placeholder="Default: 4" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="airManJump2Distance">Second Jump Distance</label>
                        <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="airManJump2Distance" id="airManJump2Distance" value="@rom.RobotMasters.AirMan.Jump2Distance" placeholder="Default: 1" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="airManJump2Height">Second Jump Height</label>
                        <input class="form-control" type="number" step="any" min="0" max="255.99609375" name="airManJump2Height" id="airManJump2Height" value="@rom.RobotMasters.AirMan.Jump2Height" placeholder="Default: 7" />
                    </div>
                </div>
                <div class="row">
                    <partial name="_ColorFormGroup" model="@("Tornado Primary Color", "airManTornadoPrimaryColor", rom.RobotMasters.AirMan.TornadoPrimaryColor.Name)" />
                    <partial name="_ColorFormGroup" model="@("Tornado Secondary Color", "airManTornadoSecondaryColor", rom.RobotMasters.AirMan.TornadoSecondaryColor.Name)" />
                </div>

                @for (int i = 0; i < rom.RobotMasters.AirMan.Patterns.Count; i++)
                {
                    TornadoPattern pattern = rom.RobotMasters.AirMan.Patterns[i];
                    <div class="card">
                        <div class="card-header">
                            @{ string patternCollapseId = $"collapsePattern{i + 1}"; }
                            <h4><a data-toggle="collapse" href="#@patternCollapseId">Tornado Pattern @(i + 1)</a></h4>
                        </div>
                        <div class="card-body collapse" id="@patternCollapseId">
                            <div class="row">
                                @for (int j = 0; j < pattern.Tornados.Count; j += 2)
                                {
                                    <div class="col-md-2 form-group">
                                        <label class="small" for="airManTornadoVertSpeed"><small>Tornado @(j + 1) Vert. Speed</small></label>
