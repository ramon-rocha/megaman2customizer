@model MegaManOptionsViewModel

<div class="card">
    <div class="card-header">
        <h2 class="panel-title"><a class="collapsed" data-toggle="collapse" href="#collapseMegaMan">Mega Man Options</a></h2>
    </div>
    <div class="card-body collapse" id="collapseMegaMan">
        <div class="row">
            <div class="col-lg-3 form-group">
                <label asp-for="StartingHealth"></label>
                <input class="form-control" asp-for="StartingHealth" />
                <span asp-validation-for="StartingHealth" class="text-danger"></span>
            </div>
            <div class="col-lg-3 form-group">
                <label asp-for="MaxHealth"></label>
                <input class="form-control" asp-for="MaxHealth" />
            </div>
            <div class="col-lg-3 form-group">
                <label asp-for="RunningSpeed"></label>
                <input class="form-control" asp-for="RunningSpeed" />
            </div>
            <div class="col-lg-3 form-group">
                <label asp-for="JumpHeight"></label>
                <input class="form-control" asp-for="JumpHeight" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 form-group">
                <label asp-for="BusterLetterCode"></label>
                <select class="form-control" asp-for="BusterLetterCode" asp-items="ListItems.WeaponLetterCodes"></select>
            </div>
            <div class="col-lg-3 form-group">
                <label asp-for="BusterPrimaryColor"></label>
                <select class="form-control" asp-for="BusterPrimaryColor" asp-items="ListItems.Colors"></select>
            </div>
            <div class="col-lg-3 form-group">
                <label asp-for="BusterSecondaryColor"></label>
                <select class="form-control" asp-for="BusterSecondaryColor" asp-items="ListItems.Colors"></select>
            </div>
            <div class="col-lg-3 form-group">
                <label asp-for="BusterProjectileSpeed"></label>
                <input class="form-control" asp-for="BusterProjectileSpeed" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 form-group">
                <label asp-for="BusterMaxProjectiles"></label>
                <input class="form-control" asp-for="BusterMaxProjectiles" />
            </div>
        </div>
    </div>
</div>